<section class="register-index">
  <header class="page-header">
    <h1>Signup!</h1>
    </header>

    <%= form_for :user, url: '/users' do |f| %>
    <div class="row g-3">
      <div class="col-md-6">
        <label for="inputName4" class="col-sm-2 col-form-label">Name: </label>
        <%= f.text_field :name, :tabindex => 1 %>
      </div>
      <div class="col-md-6">
        <label for="inputPassword4" class="col-sm-4 col-form-label">Password: </label>
        <%= f.password_field :password, :tabindex => 3 %>
      </div>
      <div class="col-md-6">
        <label for="inputEmail4" class="col-sm-2 col-form-label">Email: </label>
        <%= f.text_field :email, :tabindex => 2 %>
      </div>
      <div class="col-md-6">
        <label for="inputPasswordConfirm4" class="col-sm-4 col-form-label">Password Confirmation: </label>
        <%= f.password_field :password_confirmation, :tabindex => 4 %>
      </div>
      <div class="col-12">
        <%= f.submit "Submit", class: 'btn btn-lg btn-primary', :tabindex => 5 %>
      </div>
    </div>  
    <% end %> 



</section>      